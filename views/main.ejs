<!DOCTYPE html>
<html lang="en">
  <head>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/public/css/main.css" />
  </head>
  <body>
    <header>
      <div class="headerWrap">
        <div class="headerLeft">
          <div class="logo leftLogo">TALKTALK</div>
        </div>
        <div class="headerCenter">
          <div class="logo centerLogo">TALKTALK</div>
        </div>
        <div class="headerRight">
          <div class="heart">
            <img src="/public/img/heartEmpty.png" alt="heart" />
          </div>
          <div class="login">login</div>
          <div class="signup">signup</div>
        </div>
      </div>
    </header>

    <!-- 배경이미지가 들어갈 배너 영역 -->
    <div class="banner">
      <img src="" alt="" class="bannerImg" />
    </div>

    <!-- 메인 -->
    <div class="main">
      <div class="postWrap"></div>
    </div>
  </body>
  <script>
    const postAll = () => {
      const post = document.querySelector(".postWrap");

      axios({
        method: "post",
        url: "/free/posting",
      })
        .then((res) => {
          // 응답받은 데이터를 HTML로 변환하여 postWrap에 삽입
          const posts = res.data.allPost;
          post.innerHTML = posts
            .map(
              (post) => `
        <div class="post">
          <h3>${post.title}</h3>
          <p>${post.content}</p>
        </div>
      `
            )
            .join("");
        })
        .catch((e) => {
          e, "error";
        });
    };

    // 스크롤 시 헤더 변화
    window.addEventListener("scroll", function () {
      const headerWrap = document.querySelector(".headerWrap");
      if (window.scrollY > 50) {
        headerWrap.classList.add("scroll");
      } else {
        headerWrap.classList.remove("scroll");
      }
    });
  </script>
</html>
